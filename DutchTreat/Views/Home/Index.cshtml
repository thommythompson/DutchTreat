@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h2>@ViewData["Title"]</h2>
    <div>
        <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input />
            </div>
